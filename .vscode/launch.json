  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Example",
      "program": "${workspaceFolder}/example/index.js",
      "args": [
        "hello",
        "--name",
        "mike"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Default Program: .run()",
      "program": "${workspaceFolder}/index.js",
      "args": [
        "test"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Command test",
      "program": "${workspaceFolder}/index.js",
      "args": [
        "test"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Command: make:command",
      "program": "${workspaceFolder}/index.js",
      "args": [
        "make:command",
        "TestCommand",
        "--name",
        "testCommand",
        "--description",
        "testDescription",
        "--overwrite"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Current File",
      "program": "${file}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Current File",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "--timeout",
        "999999",
        "--colors",
        "${file}"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
